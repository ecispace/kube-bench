{
  "controls": null,
  "version": "eks-1.0",
  "id": 5,
  "text": "Managed Services",
  "type": "managedservices",
  "groups": [
    {
      "id": 5.1,
      "text": "Image Registry and Image Scanning",
      "checks": [
        {
          "id": "5.1.1",
          "text": "Ensure Image Vulnerability Scanning using Amazon ECR image scanning or a third-party provider (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.1.2",
          "text": "Minimize user access to Amazon ECR (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.1.3",
          "text": "Minimize cluster access to read-only for Amazon ECR (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.1.4",
          "text": "Minimize Container Registries to only those approved (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false
        }
      ]
    },
    {
      "id": 5.2,
      "text": "Identity and Access Management (IAM)",
      "checks": [
        {
          "id": "5.2.1",
          "text": "Prefer using dedicated Amazon EKS Service Accounts (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false
        }
      ]
    },
    {
      "id": 5.3,
      "text": "AWS Key Management Service (AWS KMS)",
      "checks": [
        {
          "id": "5.3.1",
          "text": "Ensure Kubernetes Secrets are encrypted using Customer Master Keys (CMKs) managed in AWS KMS (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false
        }
      ]
    },
    {
      "id": 5.4,
      "text": "Cluster Networking",
      "checks": [
        {
          "id": "5.4.1",
          "text": "Restrict Access to the Control Plane Endpoint (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.4.2",
          "text": "Ensure clusters are created with Private Endpoint Enabled and Public Access Disabled (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.4.3",
          "text": "Ensure clusters are created with Private Nodes (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.4.4",
          "text": "Ensure Network Policy is Enabled and set as appropriate (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        },
        {
          "id": "5.4.5",
          "text": "Encrypt traffic to HTTPS load balancers with TLS certificates (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false
        }
      ]
    },
    {
      "id": 5.5,
      "text": "Authentication and Authorization",
      "checks": [
        {
          "id": "5.5.1",
          "text": "Manage Kubernetes RBAC users with AWS IAM Authenticator for Kubernetes (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false
        }
      ]
    },
    {
      "id": 5.6,
      "text": "Other Cluster Configurations",
      "checks": [
        {
          "id": "5.6.1",
          "text": "Consider Fargate for running untrusted workloads (不计分数)",
          "type": "manual",
          "remediation": null,
          "scored": false,
          "isEnable": true
        }
      ]
    }
  ]
}